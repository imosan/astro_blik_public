---
import { languages, defaultLang, ui } from '../i18n/ui';
const { currentLang } = Astro.props;
const lang = currentLang ? currentLang : "jp";
---

<footer >

    <div class="flex flex-nowrap items-center justify-center w-full mx-auto my-8">
        <hr class="w-full border-slate-300"/>
    </div>

    <div class="w-full mx-auto my-8">
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-16">
        {
            <div class="w-full left">
                <p class="font-bold py-4">{ui[lang].footerTitle}</p>
                <ul class="text-gray-500">
                    { lang == defaultLang ?
                        <li class="px-8 py-1 text-sm"><a href="/">{ui[lang].home}</a></li>
                        <li class="px-8 py-1 text-sm"><a href="/blog">{ui[lang].blog}</a></li>
                        <li class="px-8 py-1 text-sm"><a href="/privacypolicy">{ui[lang].privacy}</a></li>
                    :
                        <li class="px-8 py-1 text-sm"><a href={`/${lang}`}>{ui[lang].home}</a></li>
                        <li class="px-8 py-1 text-sm"><a href={`/${lang}/blog`}>{ui[lang].blog}</a></li>
                        <li class="px-8 py-1 text-sm"><a href={`/${lang}/privacypolicy`}>{ui[lang].privacy}</a></li>
                    }
                </ul>
            </div>
            <div class="w-full">
                <p class="font-bold py-4">{ui[lang].contact}</p>
                <ul class="text-gray-500 px-8">
                    <li class="py-1 text-sm font-bold"><a href="/">
                    <a href=`mailto:imagawahirotaka@gmail.com?subject=${ui[lang].contact}`>{ui[lang].contactMessage}</a></li>
                </ul>
            </div>
        }
    </div>

    <div class="flex flex-nowrap items-center justify-center w-full mx-auto my-8">
        <hr class="w-full border-slate-300"/>
    </div>

    <div class="w-full mx-auto my-0">
        <p class="font-bold">Â© 20xx XXX</p>
    </div>

</footer>
