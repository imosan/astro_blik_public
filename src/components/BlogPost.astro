---
const { post, largeText } = Astro.props
---
<li class="py-2">
    <div class="flex">
        <h5>{post.data.seqNum != undefined && post.data.seqNum >= 0 && post.data.seqNum < 100 ? post.data.seqNum : "*"}</h5>
        <a class=`font-bold text-${largeText ? "[1.0rem]" : "[0.8rem]"}` href=`/${post.collection}/${post.slug}`>
            {post.data.title}
        </a>
    </div>
</li>

<style>
a {
    color: #009f5f;
}

h5 {
    color: #009f5f;
    font-family: Arial,Verdana,sans-serif;
    font-size: 1rem;
    font-weight: bold;
    letter-spacing: 2px;
    margin: 0px 10px 0px 0px;
    padding: 0px 10px 0px 10px;
    border-bottom: 2px solid #ababab;
    line-height: 30px;
    -webkit-border-radius: 20px;
    -moz-border-radius: 20px;
    border-radius: 14px;
}

.tags {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
}

.tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
}
</style>